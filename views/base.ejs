<%-include ("header")-%>
  <link rel="stylesheet" href="/staticCSS/style.css">
  <div class="container">
    <div class="">
      <div class="text-center ">
        <img src="/staticImages/images/123319-OQCGNP-235.jpg" alt="Logo" width="150" height="150" class="logo">
        <h2>Login</h2>
        <div class="">
          <span class="">Log in the existing user</span>
          <%if(locals.logout){%>
            <div class="alter alert-success text-center">
              <%=logout%>
            </div>
            <%}%>
              <%if(locals.invalid){%>
                <div class="alter alert-danger text-center">
                  <%=invalid%>
                </div>
                <%}%>
        </div>

      </div>
      <div class="pt-5">
        <form action="/router/login" method="post" class="login-form ">
          <div class="form-group text-center">
            <input type="text" class="form-control text-center" placeholder="Username" name="email" id="email">
          </div>
          <div class="form-group text-center">
            <input type="password" class="form-control text-center" name="password" placeholder="Password"
              id="password">

          </div>
          <button type="submit" class="btn btn-primary btn-block">Login</button>
          <a href="/register" class="pt-5">Register</a>
        </form>
      </div>
    </div>


  </div>

  <%-include ("footer")-%>